<Page x:Class="CarRent.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CarRent.Pages"
      mc:Ignorable="d"
      Title="AuthPage">
    <Grid>
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="Добро пожаловать!"
                       Style="{StaticResource MainDarkText}"
                       FontSize="24"
                       Margin="10"
                       HorizontalAlignment="Center" />
            <TextBlock Style="{StaticResource MainDarkText}"
                       TextWrapping="Wrap"
                       FontSize="16"
                       Margin="10"
                       Height="auto"
                       HorizontalAlignment="Center">
                Авторизируйтесь в системе или войдите как гость.
                <LineBreak />
                Если у Вас нет акккаунта, вы можете его
                <Hyperlink>создать</Hyperlink>.
            </TextBlock>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Логин:"
                               Style="{StaticResource MainDarkText}" />
                    <TextBlock Text="Пароль:"
                               Style="{StaticResource MainDarkText}" />
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBox x:Name="LoginTextBox"
                             Width="200"
                             Style="{StaticResource MainTextBox}" />
                    <PasswordBox x:Name="PasswordBox"
                                 Width="200"
                                 Style="{StaticResource PassBox}" />
                </StackPanel>
            </StackPanel>
            <Button x:Name="LoginButton"
                    Click="LoginButton_OnClick"
                    Width="150"
                    Background="#36393B"
                    Foreground="White"
                    Style="{StaticResource DefaultButton}"
                    Content="Войти" />
        </StackPanel>
    </Grid>
</Page>