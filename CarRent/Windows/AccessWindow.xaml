<Window x:Class="CarRent.AccessWindow"
        ResizeMode="CanResize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRent"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MinWidth="800"
        MinHeight="400"
        Background="{StaticResource Gradient12}"
        Title="AccessWindow" SizeToContent="WidthAndHeight">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Button x:Name="BackButton"
                Content="Назад"
                Width="80"
                Style="{StaticResource DefaultButton}"
                Click="BackButton_OnClick"
                HorizontalAlignment="Right"/>
        
        <Frame x:Name="MainFrame"
               Grid.Row="1"
               Source="../Pages/AuthPage.xaml"
               Navigated="MainFrame_OnNavigated"
               NavigationUIVisibility="Hidden" />
    </Grid>
</Window>